      <Label text="Address" />
      <Text text="{Address}" />
      <Label text="City" />
      <Text text="{City}" />
      <Label text="Postal Code" />
      <Text text="{PostalCode}" />
      <Label text="Country" />
      <Text text="{Country}" />
    </forms:content>
  </forms:SimpleForm>
</core:FragmentDefinition>