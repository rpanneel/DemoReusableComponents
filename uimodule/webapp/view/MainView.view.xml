 <mvc:View controllerName="be.rpan.demo.DemoReusableComponents.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
          <List id="customerList" items="{/Customers}">
            <items>
              <StandardListItem title="{CompanyName}" description="{ContactName}" />
            </items>
          </List>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>